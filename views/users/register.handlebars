

<div class="container text-center">
    <div class="row">
        <div class="col"> 
                    <div class="card w-25 bg-dark text-light mx-auto ">
                        <div class="card card-body bg-dark text-light">
                                <h3 class=" card-title bg-light text-dark rounded-circle ">S'enregistrer</h3>
                                <form action="/users/register" method="POST">
                        
                                    <div class="form-row">
                                                <div class="col">
                                                <label for="name">Nom</label>
                                                <input type="text" name="name" class="form-control" value="{{name}}" placeholder="Votre nom" required >
                                               </div>
                                            
                                                <div class="col">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control" value="{{email}}" placeholder="votre email"required >
                                                </div>
                                    </div>
                                    
                    
                                        <div class="form-row">
                        
                                    
                                            
                                                <div class="col">
                                                            
                                                                <label for="password" class="my-2">Mot<br> de passe</label>
                                                                <input type="password" name="password" class="form-control" value="{{password}} placeholder="Votre mot de pace" required />
                                                </div>
                                                
                                            
                                                <div class="col">
                                                                <label for="password2" class="my-2">Confirmer votre mot de passe</label>
                                                                <input type="password" name="password2" class="form-control" value="{{password2}}" placeholder="confirmer votre mot de passe" required />
                                                            
                                                </div>
                                        </div>
                                                    <button type="submit" class="btn btn-primary btn-sm my-3">Soumettre</button>
                                                    <a type="button" class="btn btn-danger btn-sm my-3" href="/">Quitter</a>
                                </form>
                                
                        </div>
                    </div>
        </div>
    </div>
</div>